<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cse100.wi16.tritonstudy">

    <!-- Permissions to use device camera and external storage -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TritonStudy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Login Activity -->
        <activity
            android:name=".login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Screen Activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- View Profile Activity -->
        <activity
            android:name=".ProfileActivityStatic"
            android:label="@string/title_activity_profile" />

        <!-- Edit Profile Screen Activity -->
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile_edit"
            android:theme="@style/AppTheme.ActionBarShowTitle" />

        <!-- Edit Study Times Activity -->
        <activity
            android:name=".add_studyTime"
            android:label="@string/title_activity_edit_times"
            android:theme="@style/AppTheme.ActionBarShowTitle" />

        <!-- Create new user: User Info (name, email, contact info, etc.) Activity -->

        <!-- Create new user: Select Classes Activity -->
        <activity
            android:name=".create_user_choose_classes"
            android:label="@string/title_activity_create_user_classes" />

        <!-- Create new user: Confirm Classes Activity -->
        <activity
            android:name=".CreateUserClassesConfirmActivity"
            android:label="@string/title_activity_create_user_classes_confirm" />

        <!-- Create new user: Verify Account Activity -->
        <activity
            android:name=".CreateUserVerify"
            android:label="@string/title_activity_create_user_verify" />
        <activity android:name=".EditEmailPassword" />
        <activity android:name=".search" />

        <activity android:name=".create_user_profile_info"></activity>
    </application>

</manifest>
