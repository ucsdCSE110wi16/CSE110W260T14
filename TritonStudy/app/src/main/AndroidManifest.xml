<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cse100.wi16.tritonstudy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TritonStudy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Screen Activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Profile Screen Activity -->
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.ActionBarShowTitle" />

        <!-- Edit Study Times Activity -->
        <activity
            android:name=".edit_times"
            android:label="@string/title_activity_edit_times"
            android:theme="@style/AppTheme.ActionBarShowTitle"/>

        <activity
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.ActionBarShowTitle" />
        <activity android:name=".ProfileActivityStatic"></activity>

    </application>

</manifest>
