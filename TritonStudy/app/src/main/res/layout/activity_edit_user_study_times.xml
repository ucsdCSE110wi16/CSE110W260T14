<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cse100.wi16.tritonstudy.edit_user_study_times"
    android:background="#2b92b9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:id="@+id/edit_user_study_time_LL">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/edit_user_study_time_lvStudyTimes"
            android:background="#ffffff"
            android:choiceMode="singleChoice"
            android:clickable="true"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="77dp"

        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_below="@id/edit_user_study_time_LL"
        android:layout_alignRight="@+id/edit_user_study_time_LL"
        android:layout_alignEnd="@+id/edit_user_study_time_LL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="89dp"
            android:layout_height="35dp"
            android:text="Back"
            android:id="@+id/edit_user_study_time_btnBack"
            android:layout_marginRight="32dp"
            android:background="#ff8700"
            android:onClick="onBackButtonClick"
            android:textColor="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="89dp"
            android:layout_height="37dp"
            android:text="Remove"
            android:id="@+id/edit_user_study_time_btnRemove"
            android:background="#ff8700"
            android:layout_marginRight="32dp"
            android:onClick="onRemoveButtonClick"
            android:textColor="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Add Study Time"
            android:id="@+id/choose_classes_btnNext"
            android:background="#ff8700"
            android:textColor="#ffffff"
            android:onClick="onAddStudyTimesButtonClick"
            android:layout_gravity="right" />

    </LinearLayout>

</RelativeLayout>
