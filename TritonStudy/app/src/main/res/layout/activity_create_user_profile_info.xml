<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cse100.wi16.tritonstudy.create_user_profile_info"
    android:background="#2b92b9"
    >


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <!--<ImageView-->
            <!--android:layout_width="128dp"-->
            <!--android:layout_height="128dp"-->
            <!--android:id="@+id/profilePicture"-->
            <!--android:layout_row="0"-->
            <!--android:layout_column="0"-->
            <!--android:background="@drawable/profile_anon"-->
            <!--android:longClickable="true" />-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="210dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:paddingTop="15dp"
                android:id="@+id/create_user_tvName"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/create_user_etName"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="#016691"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:paddingTop="15dp"
                android:id="@+id/create_user_tvEmail"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/create_user_etEmail"
                android:textColor="#ffffff"
                android:background="#016691"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone Number:"
                android:paddingTop="15dp"
                android:id="@+id/create_user_tvPhone"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/create_user_etPhone"
                android:textColor="#ffffff"
                android:background="#016691"
                android:singleLine="true" />
        </LinearLayout>

        <!--<Button-->
            <!--style="?android:attr/buttonStyleSmall"-->
            <!--android:layout_width="104dp"-->
            <!--android:layout_height="64dp"-->
            <!--android:text="Change Picture"-->
            <!--android:id="@+id/buttonChangePic"-->
            <!--android:layout_row="1"-->
            <!--android:layout_column="0"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:background="#ff8700"-->
            <!--android:textColor="#ffffff" />-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="123dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bio:"
                android:id="@+id/dynamicProfile_textView_Bio"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/create_user_etBio"
                android:background="#016691"
                android:singleLine="false"
                android:layout_gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>

        <GridLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal">

            <!--<Button-->
                <!--style="?android:attr/buttonStyleSmall"-->
                <!--android:layout_width="104dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:text="Back"-->
                <!--android:id="@+id/create_user_btnBack"-->
                <!--android:layout_row="4"-->
                <!--android:layout_column="0"-->
                <!--android:background="#b4100a"-->
                <!--android:textColor="#ffffff"-->
                <!--android:layout_gravity="left"-->
                <!--android:onClick="onBackButtonClick"-->
                <!--android:layout_margin="8dp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter Password: "
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/create_user_tvPassword"
                android:layout_gravity="left|bottom"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Re-enter Password: "
                android:layout_row="2"
                android:layout_column="0"
                android:id="@+id/create_user_tvPasswordx2"
                android:layout_gravity="left|bottom"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/create_user_etPassword"
                android:textColor="#ffffff"
                android:background="#016691"
                android:singleLine="true"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/create_user_etPasswordx2"
                android:textColor="#ffffff"
                android:background="#016691"
                android:singleLine="true"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="10dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="104dp"
                android:layout_height="32dp"
                android:text="Next"
                android:id="@+id/create_user_btnNext"
                android:layout_row="4"
                android:layout_column="1"
                android:background="#58ce46"
                android:textColor="#ffffff"
                android:layout_gravity="right"
                android:onClick="onNextButtonClick"
                android:layout_margin="8dp" />

        </GridLayout>
    </GridLayout>

</RelativeLayout>
