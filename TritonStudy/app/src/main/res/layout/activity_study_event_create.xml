<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cse100.wi16.tritonstudy.GroupCreateActivity"
    android:background="#2b92b9">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Event Name"
            android:id="@+id/textView5"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="192dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView6"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#016691"
            android:textColor="#ffffff"
            android:onClick="dateDialog"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date"
            android:id="@+id/textView9"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView10"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#016691"
            android:textColor="#ffffff"
            android:onClick="dateDialog"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="left"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView13"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/icon_calendar"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start Time"
            android:id="@+id/textView11"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView14"
            android:layout_row="2"
            android:layout_column="1"
            android:background="#016691"
            android:textColor="#ffffff"
            android:onClick="dateDialog"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="left"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/icon_clock"
            android:layout_gravity="center_vertical|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="End Time"
            android:id="@+id/textView12"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView15"
            android:layout_row="3"
            android:layout_column="1"
            android:background="#016691"
            android:textColor="#ffffff"
            android:onClick="dateDialog"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="left"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView14"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/icon_clock"
            android:layout_gravity="center_vertical|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location"
            android:id="@+id/textView13"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description"
            android:id="@+id/textView17"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="192dp"
            android:layout_height="157dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText7"
            android:background="#016691"
            android:gravity="top"
            android:singleLine="false"
            android:layout_gravity="top"
            android:textColor="#ffffff"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="2" />

        <GridLayout
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="12dp"
            android:layout_marginRight="48dp"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="3">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="89dp"
                android:layout_height="27dp"
                android:text="Back"
                android:id="@+id/buttonBack"
                android:layout_row="2"
                android:layout_column="0"
                android:background="#ff8700"
                android:textColor="#ffffff" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="89dp"
                android:layout_height="27dp"
                android:text="Confirm"
                android:id="@+id/buttonConfirm"
                android:layout_row="2"
                android:layout_column="2"
                android:background="#ff8700"
                android:textColor="#ffffff" />

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Class"
            android:id="@+id/textView16"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:textColor="#ffffff" />
    </GridLayout>
</RelativeLayout>
