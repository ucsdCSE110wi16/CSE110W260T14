<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#2b92b9">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="196dp"
            android:id="@+id/imageView6"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/profile_anon"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:layout_row="1"
            android:layout_column="0"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/nameStatic"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop = "10dp"
                android:editable="false"
                android:textColor="#ffffff"
                android:background="#016691"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Email"
                android:id="@+id/emailStatic"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop = "10dp"
                android:textColor="#ffffff"
                android:background="#016691"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Major"
                android:id="@+id/majorStatic"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop = "10dp"
                android:textColor="#ffffff"
                android:background="#016691"/>

            <TextView
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bio"
                android:id="@+id/bioStatic"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.57"
                android:layout_marginTop = "10dp"
                android:textColor="#ffffff"
                android:background="#016691"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:id="@+id/profileEdit"
                    android:layout_column="9"
                    android:layout_marginLeft="30dp"
                    android:background="#ff8700"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical|right" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Back to Main"
                    android:id="@+id/buttonBack"
                    android:layout_column="20" />
                    android:text="Home Screen"
                    android:id="@+id/button"
                    android:layout_column="59"
                    android:layout_marginLeft="40dp"
                    android:background="#ff8700"
                    android:layout_gravity="right"
                    android:textColor="#ffffff" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>
        </TableLayout>

    </GridLayout>

</RelativeLayout>