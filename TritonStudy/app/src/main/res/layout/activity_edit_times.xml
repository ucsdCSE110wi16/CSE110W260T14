<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cse100.wi16.tritonstudy.edit_times"
    android:background="#2b92b9">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/icon_calendar"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date:"
            android:id="@+id/labelDate"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textDate"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#016691"
            android:textColor="#ffffff"
            android:layout_margin="12dp"
            android:layout_gravity="center_vertical"
            android:onClick="dateDialog"
            android:nestedScrollingEnabled="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/icon_clock"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start Time:"
            android:id="@+id/labelTimeStart"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textTimeStart"
            android:layout_row="2"
            android:layout_column="2"
            android:background="#016691"
            android:textColor="#ffffff"
            android:layout_margin="12dp"
            android:layout_gravity="center_vertical"
            android:onClick="timeStartDialog" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/icon_clock"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="End Time:"
            android:id="@+id/labelTimeEnd"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textTimeEnd"
            android:layout_row="3"
            android:layout_column="2"
            android:background="#016691"
            android:textColor="#ffffff"
            android:layout_margin="12dp"
            android:layout_gravity="center_vertical"
            android:onClick="timeEndDialog" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/icon_classroom"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Class:"
            android:id="@+id/textView7"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:layout_row="5"
            android:layout_column="0"
            android:background="@drawable/icon_location"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location:"
            android:id="@+id/textView8"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLocation"
            android:layout_row="5"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:id="@+id/checkRepeat"
            android:layout_row="6"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:id="@+id/radioPersonal"
            android:layout_row="7"
            android:layout_column="1"
            android:textColor="#ffffff"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Group"
            android:id="@+id/radioGroup"
            android:layout_row="7"
            android:layout_column="2"
            android:textColor="#ffffff"
            android:checked="false" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/buttonBack"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#ff8700"
            android:textColor="#ffffff"
            android:layout_columnSpan="2" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/buttonSubmit"
            android:layout_row="9"
            android:layout_column="0"
            android:background="#ff8700"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_columnSpan="3" />

    </GridLayout>
</RelativeLayout>
