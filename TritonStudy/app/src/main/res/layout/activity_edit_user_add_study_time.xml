<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cse100.wi16.tritonstudy.edit_user_add_study_time"
    android:background="#2b92b9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select a study time to add"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:id="@+id/create_user_add_times_title"
            android:layout_row="0"
            android:layout_column="0" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:id="@+id/edit_users_add_study_time_grid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_add_studyTime_imgClock"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/icon_calendar"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Day:"
            android:id="@+id/edit_user_add_studyTime_tvDay"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_add_studyTime_spDays"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dropdown"
            android:background="#ffffff"
            android:layout_row="1"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_add_studyTime_imgClockStart"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/icon_clock"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start Time:"
            android:id="@+id/edit_user_add_studyTime_tvStartTime"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/edit_user_add_studyTime_tvDisplayStartTime"
            android:layout_row="2"
            android:layout_column="2"
            android:background="#016691"
            android:textColor="#ffffff"
            android:layout_margin="12dp"
            android:layout_gravity="center_vertical"
            android:onClick="timeStartDialog" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_add_studyTime_imgClockEnd"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/icon_clock"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="End Time:"
            android:id="@+id/edit_user_add_studyTime_tvLabelEndTime"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/edit_user_add_studyTime_tvDisplayEndTime"
            android:layout_row="3"
            android:layout_column="2"
            android:background="#016691"
            android:textColor="#ffffff"
            android:layout_margin="12dp"
            android:layout_gravity="center_vertical"
            android:onClick="timeEndDialog" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_add_studyTime_imgClass"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/icon_classroom"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Course:"
            android:id="@+id/edit_user_add_studyTime_tvCourse"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_add_studyTime_spCourse"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dropdown"
            android:background="#ffffff"
            android:layout_row="4"
            android:layout_column="2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_add_studyTime_imgLocation"
            android:layout_row="5"
            android:layout_column="0"
            android:background="@drawable/icon_location"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location:"
            android:id="@+id/edit_user_add_studyTime_tvDisplayLocation"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_user_add_studyTime_spLocation"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dropdown"
            android:background="#ffffff"
            android:layout_row="5"
            android:layout_column="2" />


    </GridLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="77dp"

        android:layout_marginTop="12dp"
        android:orientation="horizontal"

        android:layout_below="@id/edit_users_add_study_time_grid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="89dp"
            android:layout_height="35dp"
            android:text="Back"
            android:id="@+id/edit_user_study_time_btnBack"
            android:layout_marginRight="160dp"
            android:background="#ff8700"
            android:onClick="onBackButtonClick"
            android:textColor="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Add Study Time"
            android:id="@+id/choose_classes_btnNext"
            android:background="#ff8700"
            android:textColor="#ffffff"
            android:onClick="onAddStudyTimesButtonClick"
            android:layout_gravity="right" />

    </LinearLayout>
</LinearLayout>