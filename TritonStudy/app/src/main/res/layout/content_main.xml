<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.cse100.wi16.tritonstudy.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#2b92b9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/main_greeting"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:id="@+id/imageView2"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/geisel" />

        <GridLayout
            android:layout_width="254dp"
            android:layout_height="162dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="112dp"
                android:layout_height="64dp"
                android:text="@string/buttonProfile"
                android:id="@+id/buttonProfile"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#ffffff"
                android:background="#ff8700"
                android:layout_marginTop="50dp"
                android:layout_gravity="right" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="112dp"
                android:layout_height="64dp"
                android:text="@string/buttonSearch"
                android:id="@+id/buttonSearch"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="#ffffff"
                android:background="#ff8700"
                android:onClick="onSearchButtonClick"
                android:layout_marginTop="50dp"
                android:layout_gravity="right" />

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
