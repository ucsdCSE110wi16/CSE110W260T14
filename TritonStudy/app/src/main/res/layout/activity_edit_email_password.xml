<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cse100.wi16.tritonstudy.ProfileActivity"
    android:background="#2b92b9">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="210dp"
            android:layout_height="237dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Old Email"
                android:id="@+id/dynamicProfile_textView_Name"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/dynamicProfile_editText_name"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="#016691"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:id="@+id/dynamicProfile_textView_email"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/dynamicProfile_editText_email"
                android:textColor="#ffffff"
                android:background="#016691"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Major:"
                android:id="@+id/dynamicProfile_textView_major"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/dynamicProfile_editText_major"
                android:textColor="#ffffff"
                android:background="#016691"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enrolled college:"
                android:id="@+id/dynamicProfile_textView_college"
                android:textColor="#ffffff" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dynamicProfile_spinner_college"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bio:"
                android:id="@+id/dynamicProfile_textView_Bio"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="337dp"
                android:layout_height="85dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/dynamicProfile_editText_bio"
                android:background="#016691"
                android:gravity="top"
                android:singleLine="false"
                android:layout_gravity="top"
                android:textColor="#ffffff" />
        </LinearLayout>

        <GridLayout
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:text="Edit Study Times"
                android:id="@+id/buttonEditStudy"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#ff8700"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_margin="8dp" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Edit Courses"
                android:id="@+id/buttonEditCourse"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:background="#ff8700"
                android:textColor="#ffffff"
                android:layout_margin="8dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Edit Email & Password"
                android:id="@+id/dynamicProfile_button_emailPassword"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#ff8700"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_margin="8dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="104dp"
                android:layout_height="32dp"
                android:text="Cancel"
                android:id="@+id/buttonCancel"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#b4100a"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_margin="8dp" />



            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="104dp"
                android:layout_height="32dp"
                android:text="Submit"
                android:id="@+id/buttonSubmit"
                android:layout_row="1"
                android:layout_column="1"
                android:background="#58ce46"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:onClick="submit"
                android:layout_margin="8dp" />

        </GridLayout>
    </GridLayout>

</RelativeLayout>
